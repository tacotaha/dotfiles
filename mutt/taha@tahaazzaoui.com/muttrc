set from="Taha Azzaoui"
source "gpg -d ~/.mutt/taha@tahaazzaoui.com/auth.gpg |"

# Folders
set folder = "~/Mail/taha@tahaazzaoui.com"
set spoolfile = "+INBOX"
set trash = "+Trash"
set mbox = "+Received"
set record = "+Sent"
set postponed =" +Drafts"

# Folder Options
set postpone = yes
set move     = no
set copy     = no

# Security
unset imap_passive
set ssl_starttls = yes
set imap_authenticators = login

# Refresh (Seconds)
set mail_check   = 20
set timeout      = 10

# Sidebar
set sidebar_visible    = yes
set sidebar_short_path = yes
set imap_check_subscribed = yes
